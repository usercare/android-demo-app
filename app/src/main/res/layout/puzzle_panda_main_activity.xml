<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/puzzle_panda_background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/puzzle_panda_main"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.usercare.views.LandingPageButton
            android:id="@+id/pandaLifesaverButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/red_lifesaver"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/beeBlastNewGameButton"
                style="@style/PuzzlePandaButtonsStyle"
                android:onClick="onPandaPlayClicked"
                android:text="@string/panda_play_txt"/>

            <Button
                android:id="@+id/beeBlastSettingsButton"
                style="@style/PuzzlePandaButtonsStyle"
                android:text="@string/panda_music_txt"/>

            <Button
                android:id="@+id/beeBlastShareButton"
                style="@style/PuzzlePandaButtonsStyle"
                android:text="@string/panda_share_txt"/>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>